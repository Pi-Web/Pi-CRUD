{% if field is defined %}
    <div class="form-group">
        <label for="{{ field.vars.id }}" class="font-weight-bold">{{ '%s.%s'|format(page.value, name)|trans }}</label>
        {{ form_widget(field, {'attr': {'class': field.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control'}}) }}

        <div class="invalid-feedback">
            {{ form_errors(field) }}
        </div>
    </div>
{% elseif value %}
    <span class="badge badge-success">Oui</span>
{% else %}
    <span class="badge badge-danger">Non</span>
{% endif %}