{% if is_granted('view', entity) %}
    <div class="{{ attr.class }} mb-4">
        <div class="card bg-dark border-primary h-100">
            <img src="{{ asset(entity.image.name is not null ? 'images/' ~ entity.image.name : 'images/default.jpg') | imagine_filter('thumbnail') }}" class="card-img-top position-absolute opacity-20 h-100" alt="...">
            <div class="card-body text-white z-index-10">
                {% block item_title %}<h3 class="card-title">{{ entity.title }}</h3>{% endblock item_title %}
                {% block item_content %}<div class="mb-2">Modifi√© le {{ entity.updateAt|format_datetime('full', 'medium', locale='fr') }}</div>{% endblock item_content %}
                {% block item_link %}<a href="{{ path('pi_crud_show', {'type': type, 'id': entity.id}) }}" class="btn btn-primary stretched-link mb-2">Plus d'informations</a>{% endblock item_link %}
                {% block item_admin %}{% include '@PiCRUD/includes/admin_actions.html.twig' ignore missing %}{% endblock item_admin %}
            </div>
        </div>
    </div>
{% endif %}
