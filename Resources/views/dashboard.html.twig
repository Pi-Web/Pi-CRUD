{% extends 'base.html.twig' %}

{% block title %}{{ 'pi_crud.dashboard.title'|trans }}{% endblock %}

{% block content %}
    <div class="container-xl py-2 py-lg-4">
        {{ sonata_block_render({ 'type': 'block.breadcrumb' }, {}) }}

        {% block content_body_title %}
            <h1>{{ 'pi_crud.dashboard.title'|trans }}</h1>
        {% endblock content_body_title %}

        {% for name, group in groups %}
            <div class="btn-group" role="group">
                <button id="{{ 'btnGroup%s'|format(loop.index) }}" type="button" class="btn btn-primary btn-lg dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ 'pi_crud.dashboard.group.title'|trans({'entity_label': name}) }}
                </button>
                <div class="dropdown-menu" aria-labelledby="{{ 'btnGroup%s'|format(loop.index) }}" x-placement="bottom-start">
                    {% for entity in group %}
                        <a class="dropdown-item" href="{{ path('pi_crud_admin', {type: entity.type}) }}">{{ 'pi_crud.dashboard.entity.title'|trans({'entity_label': entity.type}) }}</a>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}