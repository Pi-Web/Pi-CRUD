{% if is_granted('clone', entity) %}
    <a href="{{ path('pi_crud_clone', {'type': type, 'id': entity.id}) }}" class="btn btn-outline-warning admin-link stretched-link" title="{{ 'pi_crud.admin_actions.clone'|trans({'entity_label': type}) }}">
        <i class="fa fa-copy" aria-hidden="true"></i>
        <span class="{% if label_attr is defined %}{{ label_attr }}{% endif %}"> {{ 'pi_crud.admin_actions.clone'|trans({'entity_label': type}) }}</span>
    </a>
{% endif %}
{% if is_granted('edit', entity) %}
    <a href="{{ path('pi_crud_edit', {'type': type, 'id': entity.id}) }}" class="btn btn-outline-info admin-link stretched-link" title="{{ 'pi_crud.admin_actions.edit'|trans({'entity_label': type}) }}">
        <i class="fa fa-edit" aria-hidden="true"></i>
        <span class="{% if label_attr is defined %}{{ label_attr }}{% endif %}"> {{ 'pi_crud.admin_actions.edit'|trans({'entity_label': type}) }}</span>
    </a>
{% endif %}
{% if is_granted('delete', entity) %}
    <a href="" data-href="{{ path('pi_crud_delete', {'type': type, 'id': entity.id}) }}" data-toggle="modal" data-target="#modal-confirm-delete" class="btn btn-outline-danger admin-link stretched-link" title="{{ 'pi_crud.admin_actions.delete'|trans({'entity_label': type}) }}">
        <i class="fa fa-trash" aria-hidden="true"></i>
        <span class="{% if label_attr is defined %}{{ label_attr }}{% endif %}"> {{ 'pi_crud.admin_actions.delete'|trans({'entity_label': type}) }}</span>
    </a>
{% endif %}
