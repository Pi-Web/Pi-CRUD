{% if is_granted('edit', entity) or is_granted('delete', entity) %}
    <div class="mt-4">
        {% if is_granted('edit', entity) %}
            <a href="{{ path('pi_crud_edit', {'type': type, 'id': entity.id}) }}" class="btn btn-outline-info admin-link stretched-link" title="Ã‰diter">
                <i class="fa fa-edit" aria-hidden="true"></i>
                <span class="{% if label_attr is defined %}{{ label_attr }}{% endif %}"> Modifier</span>
            </a>
        {% endif %}
        {% if is_granted('delete', entity) %}
            <a href="" data-href="{{ path('pi_crud_delete', {'type': type, 'id': entity.id}) }}" data-toggle="modal" data-target="#modal-confirm-delete" class="btn btn-outline-danger admin-link stretched-link" title="Supprimer">
                <i class="fa fa-trash" aria-hidden="true"></i>
                <span class="{% if label_attr is defined %}{{ label_attr }}{% endif %}"> Supprimer</span>
            </a>
        {% endif %}
    </div>
{% endif %}
